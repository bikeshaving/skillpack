{
  "name": "@b9g/skillpack",
  "version": "0.1.2",
  "description": "Build Agent Skills from your existing docs",
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeshaving/skillpack.git"
  },
  "type": "module",
  "scripts": {
    "build": "libuild",
    "prepublishOnly": "echo 'ERROR: Cannot publish from root directory. Use libuild publish instead.' && exit 1"
  },
  "keywords": [
    "agent-skills",
    "claude",
    "skill",
    "markdown",
    "pack"
  ],
  "dependencies": {
    "archiver": "^7.0.1",
    "marked": "^15.0.4"
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.23",
    "@types/archiver": "^6.0.3",
    "@types/node": "^22.10.5"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "bin": {
    "skillpack": "./dist/src/cli.js"
  },
  "module": "./dist/src/cli.js",
  "exports": {
    ".": {
      "import": "./dist/src/cli.js"
    },
    "./cli": {
      "import": "./dist/src/cli.js"
    },
    "./cli.js": {
      "import": "./dist/src/cli.js"
    },
    "./package.json": "./dist/package.json"
  }
}
